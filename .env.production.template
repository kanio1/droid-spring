# BSS Production Environment Configuration Template
# Copy this file to .env.production and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=bss
POSTGRES_USER=bss_app
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
KEYCLOAK_HOSTNAME=auth.bss.company.com
KEYCLOAK_REALM=bss
KEYCLOAK_ISSUER_URI=https://auth.bss.company.com/realms/bss
KEYCLOAK_JWKS_URI=https://auth.bss.company.com/realms/bss/protocol/openid-connect/certs
KEYCLOAK_CLIENT_ID=bss-frontend

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NUXT_PUBLIC_API_BASE=https://api.bss.company.com
NUXT_PUBLIC_KEYCLOAK_URL=https://auth.bss.company.com
NUXT_PUBLIC_KEYCLOAK_REALM=bss
NUXT_PUBLIC_KEYCLOAK_CLIENT_ID=bss-frontend

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
OTLP_TRACING_ENDPOINT=http://tempo:4317
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
ACME_EMAIL=ops@bss.company.com
SSL_CERT_PATH=/etc/ssl/certs/bss.crt
SSL_KEY_PATH=/etc/ssl/private/bss.key

# =============================================================================
# KUBERNETES CONFIGURATION (for K8s deployments)
# =============================================================================
KUBECTL_CONTEXT=production-cluster
REGISTRY=your-registry.com/bss
NAMESPACE=bss

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
POSTGRES_MEMORY_LIMIT=8Gi
POSTGRES_CPU_LIMIT=2000m
REDIS_MEMORY_LIMIT=4Gi
REDIS_CPU_LIMIT=1000m
BACKEND_MEMORY_LIMIT=6Gi
BACKEND_CPU_LIMIT=2000m
FRONTEND_MEMORY_LIMIT=1Gi
FRONTEND_CPU_LIMIT=500m

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================
BACKEND_REPLICAS=3
FRONTEND_REPLICAS=2
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bss-production-backups
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
S3_SECRET_KEY=YOUR_S3_SECRET_KEY
S3_REGION=us-east-1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=GENERATE_32_CHAR_SECRET_HERE
ENCRYPTION_KEY=GENERATE_32_CHAR_ENCRYPTION_KEY
ALLOWED_HOSTS=bss.company.com,api.bss.company.com,auth.bss.company.com
CORS_ORIGINS=https://bss.company.com

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_EMAIL=ops-team@bss.company.com
ONCALL_EMAIL=oncall@bss.company.com
PAGERDUTY_KEY=YOUR_PAGERDUTY_INTEGRATION_KEY

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
DB_POOL_SIZE=20
DB_MIN_IDLE=5
REDIS_MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=20000
QUERY_TIMEOUT=30000
CACHE_TTL_SECONDS=3600
