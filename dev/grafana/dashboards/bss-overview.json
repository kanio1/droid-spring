{
  "dashboard": {
    "id": null,
    "title": "BSS System Overview - 400k Events/Min",
    "description": "Comprehensive monitoring dashboard for BSS system targeting 400,000 events per minute",
    "tags": ["bss", "monitoring", "kafka", "postgresql", "redis"],
    "timezone": "UTC",
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Event Throughput (Target: 6,667 events/sec)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(bss_events_total[1m])",
            "legendFormat": "Current Rate",
            "refId": "A"
          },
          {
            "expr": "6667",
            "legendFormat": "Target",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 5000},
                {"color": "green", "value": 6000}
              ]
            },
            "unit": "events/s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Events per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(bss_events_total[1m]) * 60",
            "legendFormat": "Events/Min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 300000},
                {"color": "green", "value": 400000}
              ]
            },
            "unit": "events/min"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ]
  }
}
