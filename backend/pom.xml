    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.testcontainers</groupId>
                <artifactId>testcontainers-bom</artifactId>
                <version>1.19.3</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>2023.0.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <image>
                        <builder>paketobuildpacks/builder-jammy-base:latest</builder>
                    </image>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>

            <!-- JaCoCo Code Coverage - TEMPORARILY DISABLED FOR DEBUGGING -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.11</version>
                <configuration>
                    <skip>true</skip>
                    <excludes>
                        <exclude>**/*Application.class</exclude>
                        <exclude>**/config/*.class</exclude>
                        <exclude>**/infrastructure/**</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Surefire Plugin Configuration with Parallel Execution -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                        <include>**/*Tests.java</include>
                        <include>**/*IT.java</include>
                    </includes>
                    <excludes>
                        <exclude>**/TestConfiguration.java</exclude>
                    </excludes>

                    <!-- Parallel Test Execution Configuration -->
                    <parallel>classes</parallel>
                    <threadCount>4</threadCount>
                    <perCoreThreadCount>true</perCoreThreadCount>
                    <useUnlimitedThreads>false</useUnlimitedThreads>
                    <skipTests>false</skipTests>
                    <failIfNoTests>false</failIfNoTests>

                    <!-- Memory and Performance Settings -->
                    <argLine>
                        -Xmx1024m
                        -XX:MaxMetaspaceSize=512m
                    </argLine>

                    <!-- System Properties -->
                    <systemPropertyVariables>
                        <java.awt.headless>true</java.awt.headless>
                        <test.parallel.execution>true</test.parallel.execution>
                    </systemPropertyVariables>

                    <!-- Shutdown Configuration -->
                    <shutdown>kill</shutdown>

                    <!-- Test Result Configuration -->
                    <testFailureIgnore>false</testFailureIgnore>
                    <failIfNoTests>false</failIfNoTests>
                </configuration>
            </plugin>

            <!-- Failsafe Plugin for Integration Tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <includes>
                        <include>**/*IT.java</include>
                        <include>**/*IntegrationTest.java</include>
                    </includes>

                    <!-- Parallel execution for integration tests -->
                    <parallel>classes</parallel>
                    <threadCount>2</threadCount>
                    <perCoreThreadCount>true</perCoreThreadCount>

                    <!-- Integration test timeout -->
                    <timeoutInSeconds>600</timeoutInSeconds>

                    <argLine>
                        @{jacocoArgLine}
                        -Xmx1536m
                    </argLine>

                    <systemPropertyVariables>
                        <java.awt.headless>true</java.awt.headless>
                    </systemPropertyVariables>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Allure Maven Plugin for Report Generation -->
            <plugin>
                <groupId>io.qameta.allure</groupId>
                <artifactId>allure-maven</artifactId>
                <version>2.12.0</version>
                <configuration>
                    <reportVersion>2.24.0</reportVersion>
                    <resultsDirectory>${project.build.directory}/allure-results</resultsDirectory>
                    <reportDirectory>${project.build.directory}/allure-report</reportDirectory>
                    <propertiesFilePath>allure.properties</propertiesFilePath>
                    <checkLinks>false</checkLinks>
                </configuration>
            </plugin>

            <!-- Pact Provider Verification Plugin -->
            <plugin>
                <groupId>au.com.dius.pact.provider</groupId>
                <artifactId>maven</artifactId>
                <version>4.6.15</version>
                <configuration>
                    <pactDirectory>tests/contract/pacts</pactDirectory>
                    <pactBrokerUrl>${pact.broker.url}</pactBrokerUrl>
                    <pactBrokerToken>${pact.broker.token}</pactBrokerToken>
                    <pactBrokerUsername>${pact.broker.username}</pactBrokerUsername>
                    <pactBrokerPassword>${pact.broker.password}</pactBrokerPassword>
                    <tags>
                        <tag>${project.version}</tag>
                        <tag>${pact.tag}</tag>
                    </tags>
                    <consumerFilters>
                        <filter>BSS Frontend</filter>
                    </consumerFilters>
                    <providerVersion>${project.version}</providerVersion>
                    <publishVerificationResults>${pact.publish.results:true}</publishVerificationResults>
                </configuration>
            </plugin>

            <!-- Spring Native AOT Plugin -->
            <plugin>
                <groupId>org.springframework.experimental</groupId>
                <artifactId>spring-aot-maven-plugin</artifactId>
                <version>0.12.1</version>
                <configuration>
                    <mode>build</mode>
                    <removeXmlSupport>true</removeXmlSupport>
                    <initializeEmptySpringFactories>false</initializeEmptySpringFactories>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Native Build Tools Plugin -->
            <plugin>
                <groupId>org.graalvm.buildtools</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <version>0.9.28</version>
                <configuration>
                    <buildArgs>
                        <buildArg>--no-fallback</buildArg>
                        <buildArg>--enable-http</buildArg>
                        <buildArg>--enable-https</buildArg>
                        <buildArg>-H:+ReportExceptionStackTraces</buildArg>
                        <buildArg>-H:Debug=none</buildArg>
                        <buildArg>-H:Log=registerResource:warning</buildArg>
                        <buildArg>--rerun-class-initialization-at-runtime=org.postgresql.ssl.NonValidatingFactory</buildArg>
                    </buildArgs>
                    <imageName>bss-backend-native</imageName>
                    <manifest>
                        <mainClass>com.droid.bss.BssApplication</mainClass>
                    </manifest>
                </configuration>
                <executions>
                    <execution>
                        <id>test-native</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>build-native</id>
                        <phase>package</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- Native Profile for GraalVM compilation -->
    <profiles>
        <profile>
            <id>native</id>
            <activation>
                <property>
                    <name>native</name>
                </property>
            </activation>
            <properties>
                <skipTests>true</skipTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.graalvm.buildtools</groupId>
                        <artifactId>native-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>build-native</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>native-image</id>
            <properties>
                <rebuild.image>true</rebuild.image>
            </properties>
        </profile>
    </profiles>

</project>
